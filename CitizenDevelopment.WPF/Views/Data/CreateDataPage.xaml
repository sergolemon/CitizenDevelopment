<Page x:Class="CitizenDevelopment.WPF.Views.Data.CreateDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CitizenDevelopment.WPF.Views.Data"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Create">

    <Grid x:Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="70px" />
        </Grid.RowDefinitions>

        <TextBlock Panel.ZIndex="2" x:Name="Notify" Width="0" Height="auto" Margin="5" Padding="5" Foreground="White" FontSize="15" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Top" />

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label Margin="190 0 0 0" Foreground="White" FontSize="18" VerticalAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0">User name</Label>
                <TextBox Text="{Binding Path=UserName, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 150 0" VerticalAlignment="Center" FontSize="18" VerticalContentAlignment="Center" Padding="3" Width="220" Grid.Column="1"></TextBox>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label Margin="190 0 0 0" Foreground="White" FontSize="18" VerticalAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0">Application name</Label>
                <TextBox Text="{Binding Path=ApplicationName, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 150 0" VerticalAlignment="Center" FontSize="18" VerticalContentAlignment="Center" Padding="3" Width="220" Grid.Column="1"></TextBox>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label Margin="190 0 0 0" Foreground="White" FontSize="18" VerticalAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0">Comment</Label>
                <TextBox Text="{Binding Path=Comment, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="0 0 150 0" VerticalAlignment="Center" FontSize="18" VerticalContentAlignment="Center" Padding="3" Width="220" Grid.Column="1"></TextBox>
            </Grid>
        </Grid>

        <Button Content="Go to back" Background="{StaticResource BlueBrush}" HorizontalAlignment="Left" Foreground="White" Style="{StaticResource BottomBaseButton}" Click="Button_Click_1" />
        <Button Command="{Binding CreateCommand}" Foreground="White" Background="{StaticResource OrangeBrush}" Style="{StaticResource BottomBaseButton}" HorizontalAlignment="Right" Content="Save new record" />
    </Grid>
</Page>
